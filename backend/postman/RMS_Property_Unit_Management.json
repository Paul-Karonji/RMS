						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{owner_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Green Valley Apartments\",\n  \"property_type\": \"apartment\",\n  \"description\": \"Modern apartments in Westlands\",\n  \"address_line_1\": \"123 Main St\",\n  \"address_line_2\": \"Westlands\",\n  \"city\": \"Nairobi\",\n  \"state\": \"Nairobi\",\n  \"postal_code\": \"00100\",\n  \"country\": \"Kenya\",\n  \"latitude\": -1.2654,\n  \"longitude\": 36.7984,\n  \"total_units\": 10,\n  \"commission_percentage\": 10.00\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/properties",
							"host": ["{{base_url}}"],
							"path": ["api", "properties"]
						}
					}
				},
