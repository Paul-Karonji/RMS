	"item": [
		{
			"name": "Properties",
			"item": [
				{
					"name": "List Properties",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							},
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/properties?status=active&property_type=apartment&page=1&per_page=20",
							"host": ["{{base_url}}"],
							"path": ["api", "properties"],
							"query": [
								{
									"key": "status",
									"value": "active",
									"description": "Filter by status: pending_approval, active, rejected"
								},
								{
									"key": "property_type",
									"value": "apartment",
									"description": "Filter by type: apartment, villa, townhouse, studio, etc."
								},
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "per_page",
									"value": "20"
								}
							]
						}
					}
				},
